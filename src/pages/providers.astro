---
import Layout from '../layouts/Layout.astro';
import { getSiteName, getKeyword, getDomain, getSiteURL } from '../lib/site-config';

const siteName = getSiteName();
const keyword = getKeyword();
const domain = getDomain();
const siteURL = getSiteURL();

const title = "Free Government Phone - Top Free Phone Providers | Free Government Phone";
const description = "Compare the best free government phone providers. Find out which companies offer the best free phones, data plans, and coverage for Lifeline participants.";
const canonicalURL = `${siteURL}/providers`;

const jsonLD = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "Free Government Phone - Top Free Phone Providers",
  "description": description,
  "author": {
    "@type": "Organization",
    "name": siteName
  },
  "publisher": {
    "@type": "Organization",
    "name": siteName,
    "url": siteURL
  },
  "datePublished": "2025-12-11",
  "dateModified": "2025-12-11",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": canonicalURL
  }
};

const faqJsonLD = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "Which provider offers the best free government phone?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "The best provider depends on your location and needs. SafeLink Wireless offers nationwide coverage, while Q Link Wireless provides generous data allowances. Check coverage in your area before choosing."
      }
    },
    {
      "@type": "Question",
      "name": "Can I switch between free phone providers?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes, you can switch providers, but you can only receive service from one Lifeline provider at a time. Contact your new provider to transfer your service."
      }
    },
    {
      "@type": "Question",
      "name": "Do all providers offer the same free phone benefits?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "No, benefits vary by provider. Some offer more minutes, others provide better phones or more data. Compare plans to find what works best for your needs."
      }
    }
  ]
};
